{% extends '../base.html.twig' %}

{% block title %}New Weather{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white">
                        <h3 class="mb-0">Create New Weather Forecast</h3>
                    </div>
                    <div class="card-body">
                        {{ form_start(form, {'attr': {'class': 'needs-validation'}}) }}
                        <div class="mb-3">
                            {{ form_label(form.location) }}
                            {{ form_widget(form.location, {'attr': {'class': 'form-select'}}) }}
                            {{ form_errors(form.location) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.date) }}
                            {{ form_widget(form.date, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.date) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.celcius) }}
                            {{ form_widget(form.celcius, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.celcius) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.windSpeed) }}
                            {{ form_widget(form.windSpeed, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.windSpeed) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.precipitation) }}
                            {{ form_widget(form.precipitation, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.precipitation) }}
                        </div>
                        <div class="mb-3">
                            {{ form_label(form.humidity) }}
                            {{ form_widget(form.humidity, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(form.humidity) }}
                        </div>
                        <div class="d-grid">
                            <button class="btn btn-success btn-lg">Save</button>
                        </div>
                        {{ form_end(form) }}
                    </div>
                </div>
                <div class="mt-3 text-center">
                    <a href="{{ path('app_weather_index') }}" class="btn btn-secondary">Back to list</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
