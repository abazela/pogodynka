{% extends 'base.html.twig' %}

{% block title %}Lokalizacje{% endblock %}

{% block body %}
    <div class="container mt-4">
        <h1>Lokalizacje</h1>

        {% if is_granted('ROLE_LOCATION_NEW') %}
            <a href="{{ path('app_location_new') }}" class="btn btn-success mb-3">+ Dodaj lokalizację</a>
        {% endif %}

        <table class="table table-striped">
            <thead>
            <tr>
                <th>Id</th>
                <th>Miasto</th>
                <th>Kraj</th>
                <th>Szerokość</th>
                <th>Długość</th>
                <th>Akcje</th>
            </tr>
            </thead>
            <tbody>
            {% for location in locations %}
                <tr>
                    <td>{{ location.id }}</td>
                    <td>{{ location.city }}</td>
                    <td>{{ location.country }}</td>
                    <td>{{ location.latitude }}</td>
                    <td>{{ location.longitude }}</td>
                    <td>
                        {% if is_granted('ROLE_LOCATION_EDIT') %}
                            <a href="{{ path('app_location_edit', {'id': location.id}) }}" class="btn btn-sm btn-warning">edit</a>
                        {% endif %}

                        {% if is_granted('ROLE_LOCATION_DELETE') %}
                            <form method="post" action="{{ path('app_location_delete', {'id': location.id}) }}" style="display:inline;">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ location.id) }}">
                                <button type="submit" class="btn btn-sm btn-danger" onclick="return confirm('Na pewno usunąć?');">delete</button>
                            </form>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr><td colspan="6">Brak lokalizacji</td></tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
