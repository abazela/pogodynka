{% extends 'base.html.twig' %}

{% block title %}Locations List{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Locations List</h1>
    <a href="{{ path('app_location_crud_new') }}" class="btn btn-primary mb-3">Create new</a>
    <div class="card">
        <ul class="list-group list-group-flush">
            {% for location in locations %}
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <div>
                    <strong>{{ location.city }}</strong> ({{ location.country }})
                    <br><small>Lat: {{ location.latitude }}, Lng: {{ location.longitude }}</small>
                </div>
                <div>
                    <a href="{{ path('app_location_crud_edit', {'id': location.id}) }}" class="btn btn-sm btn-outline-secondary">Edit</a>
                    <form method="post" action="{{ path('app_location_crud_delete', {'id': location.id}) }}" style="display:inline;" onsubmit="return confirm('Are you sure?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ location.id) }}">
                        <button class="btn btn-sm btn-danger">Delete</button>
                    </form>
                </div>
            </li>
            {% else %}
            <li class="list-group-item text-muted">No locations found.</li>
            {% endfor %}
        </ul>
    </div>
</div>
{% endblock %}